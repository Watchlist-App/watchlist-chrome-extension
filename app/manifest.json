{
    "name": "__MSG_appName__",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "watchlist chrome extention",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "http://www.google.com/*",
        "https://www.google.com/*"
      ],
      "css": [
        "styles/button.css"
      ],
      "js": [
        "scripts/googleContentScript.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": [
        "http://www.imdb.com/*"
      ],
      "css": [
        "styles/button.css"
      ],
      "js": [
        "scripts/imdbContentScript.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}
